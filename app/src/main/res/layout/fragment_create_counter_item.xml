<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.counters.counter.counter_main.CreateCounterItemFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelCreateItemC"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_baseline_delete_forever_24"
        android:backgroundTint="#941212"
        android:theme="@style/Theme.AppCompat"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createItemC"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_baseline_check_24"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editItemC"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/ic_baseline_edit_24"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <EditText
        android:id="@+id/titleDB"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/contur_text_rect"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:hint="Название цели"
        android:isScrollContainer="false"
        android:textColor="@color/purple_300"
        android:textColorHint="#808080"
        android:textCursorDrawable="@drawable/green_cursor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tselDB"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="238dp"
        android:layout_height="64dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/contur_text_rect"
        android:gravity="center"
        android:hint="Цель"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:isScrollContainer="false"
        android:textAllCaps="true"
        android:textColor="@color/purple_300"
        android:textColorHint="#808080"
        android:textCursorDrawable="@drawable/green_cursor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/titleDescriptFromCreateItem"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/contur_text_rect"
        android:gravity="center"
        android:hint="Описание цели"
        android:isScrollContainer="true"
        android:textColor="@color/purple_300"
        android:textColorHint="#808080"
        android:textCursorDrawable="@drawable/green_cursor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>