<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/counterFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.counters.counter.counter_main.CounterMainFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Описание цели">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleDescript"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/green_cursor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.523" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editTselCounterFragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/minusCounterFragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_remove_circle_outline_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Цель">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tsel"
            android:layout_width="238dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:shadowColor="@color/purple_400"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/green_cursor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.266" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetProgressCounterFragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_restart_alt_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveProgressCounterFragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_check_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plusCounterFragment"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_control_point_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        android:visibility="visible"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Название цели">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleTsel"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center"
            android:shadowColor="@color/purple_400"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="1.6"
            android:textColor="@color/purple_300"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/green_cursor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/setCounter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:icon="@drawable/ic_baseline_settings_24"
        app:iconSize="60dp"
        app:iconGravity="textEnd"
        style="@style/Widget.Material3.Button.IconButton"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dataBaseCounter"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_baseline_format_list_bulleted_24"
        app:iconGravity="textEnd"
        app:iconSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/mainProgressBarCounterFragment"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:indeterminateTint="#12705a"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_round_corners"
        android:scaleY="1.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <TextView
        android:id="@+id/editProgressCountTextCounterFragment"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:shadowColor="@color/purple_400"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

</androidx.constraintlayout.widget.ConstraintLayout>